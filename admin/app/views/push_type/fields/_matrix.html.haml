= f.label field.name, field.label

.repeater-field{ ng: { controller: 'RepeaterFieldCtrl', init: "obj={}; initRows(#{ f.object.send(field.name).to_json })" } }
  %table
    %thead
      %tr
        - field.mapping.keys.each do |key|
          %th= key.to_s.humanize
        %th &nbsp;
    %tbody
      %tr{ ng: { repeat: 'row in rows track by $index' } }
        - field.mapping.each do |key, form_helper|
          %td= f.send form_helper, nil, field.html_options.merge(name: "#{ f.object_name }[#{ field.name }][][#{ key }]", id: "#{ f.object_name }_#{ field.name }_{{ $index }}_#{ key }", value: nil, :'ng-model' => "row.#{ key }")
        %td.remove
          %a.alert{ ng: { click: 'removeRow($index)' } }= ficon(:x)
  .plus
    %a.button.success.tiny.radius{ ng: { click: 'addRow()' } }= ficon :plus, 'Add row'
